<style>
body{
    background-color:#198754;
}
h1{
    font-weight: bold;
    color: rgba(255, 255, 255, 0.95);
}
.leaflet-popup-content-wrapper{
    transform: scale(0.7)
}
</style>

<!-- Jumbotron -->
<div class=" border-bottom border-top border-dark border-4 p-4 text-center bg-success d-sm-flex flex-nowrap align-items-center justify-content-center">
    <h1 class="mx-4">SEE THE LOCATION OF OUR FESTIVALS ARROUND THE GLOBE</h1>
</div>
<!-- Jumbotron -->


<div id="map"></div>
<script>
    var map = L.map('map', {gestureHandling: true}).setView([38.183334,  15.550000], 1.8);
</script>

<script>
    L.tileLayer.provider('Stamen.Watercolor', { noWrap: true}).addTo(map);

    var greenIcon = L.icon({
        iconUrl: '/fireworks-logo.png',

        iconSize:     [50, 50], // size of the icon
        iconAnchor:   [5, 50], // point of the icon which will correspond to marker's location
        popupAnchor:  [15, -50] // point from which the popup should open relative to the iconAnchor
    });
</script>
<% @products.each do |product| %>
    <script>
    
        L.marker(['<%= product.lat %>','<%= product.long %>'], {icon: greenIcon}).bindPopup(
            '<div class="card" style="width: 17rem;"><%= link_to festival_path(product) do %><%= image_tag product.image_link, alt: product.title, class: "card-img-top img-fluid" %><% end %></div><div class="card-footer form-group px-4 pb-3 mt-0 border border-light rounded"><h5 class="card-text d-flex justify-content-end"><h5 class="text-start"><b><%= product.title %></b></h5><h5 class="text-end">â‚¬<%= product.price.to_i %></h5><%= form_for @order_item do |f| %><%= f.hidden_field :product_id, :value => product.id %><%= f.number_field :quantity, :value => 1, :min => 1, class: "form-control" %><div class="d-flex justify-content-end"><%= f.submit "Add to Basket ", class: "btn btn-secondary mt-3" %></div><% end %></div>'
        ).openPopup().addTo(map);

    </script>
<% end %>